<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App01_ConsultarCEP"
             x:Class="App01_ConsultarCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="15" Spacing="30">
        <!-- Place new controls here -->

        <Image 
            Source="logo.png" x:Name="LOGO"/>
        <Entry 
            x:Name="CEP"
            Placeholder="Digite o CEP"
            PlaceholderColor="#FFBF00"
            BackgroundColor="#FFFFFF"/>
        <Button
            x:Name="BOTAO"
            Text="Buscar CEP"
            TextColor="#FFFFFF"
            BackgroundColor="#00416B"/>
        <Label 
            x:Name="RESULTADO"
            Text=""
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
